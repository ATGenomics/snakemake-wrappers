rule trimmomatic_se_fq_gz:
    """Use trimmomatic + pigz via process substitution"""
    input:
        "reads/{sample}.fastq"  # fastq accepted
    output:
        "trimmed/{sample}.fastq.gz"
    log:
        "logs/trimmomatic/{sample}.log"
    params:
        # list of trimmers (see manual)
        trimmer=["TRAILING:3"],
        # compression levels from -0 to -9 and -11
        compression_level="-5",
        # optional parameters
        extra="",
        pigz="output"
    threads:
        32
    wrapper:
        "master/bio/trimmomatic/se"
