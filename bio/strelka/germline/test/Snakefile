rule strelka_germline:
    input:
        bam = "bam/{sample}.bam"
    output:
        # see Strelka manual for additional output files
        "strelka/{sample}/results/variants/variants.vcf.gz"
    log:
        "logs/strelka/germline/{sample}.log"
    params:
        # path to reference genome fasta
        ref="genome.fasta",
        # Strelka call regions
        callRegions="callregions.bed.gz"
        # optional parameters
        extra=""
    threads: 8
    wrapper:
        "master/bio/strelka/somatic"
